---
const { img } = Astro.props;
const { title } = Astro.props;
const { text } = Astro.props;
---

<div>
	<img src={img} alt="" width="210">
	<h3>{title}</h3>
	<p>{text}</p>
</div>

<style>
	div{
		
		width: 300px;
		height: 360px;
		padding-top:  40px;
		text-align: center;
		justify-content: center;
	}
	img{
		border-radius: 50%;
		border: 2.5px solid #00788c;
	}
	h3{
		font-family: 'Poppins', sans-serif;
		color: #00788C;
		font-size: 26px;
		align-items: center;
		margin: 35px 0 25px 0;
	}
	p{
		font-family: 'Poppins', sans-serif;
		font-size: 18px;
		font-weight: 100;
		margin: 0;
	}
</style>