---
import logo from "../assets/logo_gb.svg";
import CardDir from "./Card_Dir.astro";
import CardCurso from "./Card_Info.astro";
import YellowButton from "./Yellow_button.astro";
import CardAge from "./Card_age.astro";
import CardCertification from "./Card_Certification.astro";
const { icon_emi } = Astro.props;
const { name_emi } = Astro.props;
const { addres_emi } = Astro.props;
const { addres_emi_2 } = Astro.props;

const base = import.meta.env.BASE_URL;
---

<div id="Header">
	<div id="Logos" class="">
		<img src={logo.src} alt="GetBrit!" />
		<p>Escuela Municiapal de</br>
		Idiomas de {name_emi}</p>
	</div>
	<div id="Enlaces">
		<a href="/">Inicio</a>
		<a href="/">Horarios</a>
		<a href="/">La Escuela</a>
		<a href="/">Prueba de Nivel</a>
	</div>
</div>
	
<div class="container">
	<div id="logo_municipio">
		<p>Con la colaboracion de</p>
		<img src={icon_emi} alt=""  />
	</div>
	<CardDir
		name_emi={name_emi}
		addres_emi={addres_emi}
		addres_emi_2={addres_emi_2}
		id="card_municipio"
	/>
</div>
<div class="InformationContainer">
	<div class="InformationCards">
		<CardCurso
		urlImg="../public/Imagenes_prueba/Curso.webp"
		h3Text="CURSO 2025"
		h5Text="Curso 2025"
		pText="DESDE OCTUBRE HASTA JUNIO"
		/>
		<CardCurso
		urlImg=`${base}/Imagenes_prueba/Certificados.webp`
		h3Text="EXAMENES OFICIALES"
		h5Text="Exámenes oficiales"
		pText="CONSULTA TODAS LAS FEHCAS DISPONIBLES PARA ESTE CURSO"
		/>
		<CardCurso
		urlImg="../public/Imagenes_prueba/Idiomas.webp"
		h3Text="OTROS IDIOMAS"
		h5Text="Otros Idiomas"
		pText="DISPONEMOS DE DIFERENTES IDIOMAS"
		/>
	</div>
	<div class="InformationButtons">
		<div class="button">
			<YellowButton 
				link="www.google.es"
				text="Inglés"/>
			<YellowButton 
				link="www.google.es"
				text="Francés"/>
			<YellowButton 
				link="www.google.es"
				text="Alemán"/>
			<YellowButton 
				link="www.google.es"
				text="Chino"/>
			<YellowButton 
				link="www.google.es"
				text="Ejemplo"/>
			<YellowButton 
				link="www.google.es"
				text="Ejemplo2"/>
		</div>
		<div class="CardAge">
			<CardAge 
				img="../public/imagenes_prueba/niña3años.jpeg"
				title="Cursos Infants"
				text="De 3 a 5 años"
				/>
			<CardAge 
				img="../public/imagenes_prueba/niña3años.jpeg"
				title="Cursos Kids"
				text="De 6 a 11 años"
				/>
			</div>
			<div class="CardAge">
			<CardAge 
				img="../public/imagenes_prueba/niña3años.jpeg"
				title="Cursos Teens"
				text="De 12 a 17 años"
				/>
			<CardAge 
				img="../public/imagenes_prueba/niña3años.jpeg"
				title="Cursos Adults"
				text="Apartir de 18 años"
				/>
		</div>
	</div>
</div>
<div class="CTA">
	<YellowButton 
		link="#"
		text="Inscríbete YA!"/>
	<YellowButton 		l
		ink="#"
		text="Prueba de nivel"/>
</div>
<div class="Certification">
	<h3>
		Certificaciones Internacionales
	</h3>
	<div>
		<p>
			Certificate con nosotros en las instituciones mas prestigiosas del mundo.
			Años de experiencia y cientos de alumnos certificados avalan nuestra metodologia.
		</p>
	</div>
	<div>
	<CardCertification 
		name = "Cambridge"/>
	</div>
</div>
<div class="Contact">
	<div class="contact_text">
		<h3>
			Solicita más información
		</h3>
		<p>
			Si quieres más detalles sobre nuestros cursos, prográmas, horarios, etc. 
		</p>
		<p>
			Rellena el siguiente formulario o llamanos y estaremos encantados de ayudarte.
		</p>
		<p>
			Teléfono: <b>925 365 719</b>
		</p>
		<p>
			HORARIO DE ATENCIÓN AL PÚBLICO: 
		</p>
		<ul>
			<li><strong>Lunes a jueves:</strong> 9:00 - 14:00 y 16:00 - 19:00</li>
			<li><strong>Viernes:</strong> 8:00 - 15:00</li>
		</ul>
	</div>
	<div class="form">
		<form action="#" method="POST">
			<label for="name">Nombre Completo:</label>
			<input 
				type="text" 
				id="name" 
				name="name" 
				required>
			<label for="email">e-Mail:</label>
			<input 
				type="email" 
				id="email" 
				name="email"
				placeholder="example@example.com"
				required>
			<label for="number">Telefono:</label>
			<input 
				type="tel" 
				id="number" 
				name="number"
				maxlength="9"
				minlength="9"
				onkeypress="return event.charCode >= 48 && event.charCode <= 57"
				placeholder="xxx.xxx.xxx"
				required>
			<label for="comment">Comentario:</label>
			<textarea 
				id="comment" 
				name="comment"
				rows="8"
				required> 
			</textarea>
			<button type="submit">Enviar!</button>
		</form>
	</div>
</div>
<style>
		#Header {
			height: auto;
			padding-left: 100px;
			padding-right: 100px;
			background-color: #00788c;
			display: grid;
			grid-template-columns: repeat(2, 1fr);
		}
		#Logos {
			display: flex;
			flex-direction: row;
			justify-content: center;
		}
		#Logos > #Logo_EMI {
			padding-left: 20px;
		}
		#Logos > p {
			font-size: 18px;
			padding-left: 2%;
			margin-top: 4%;
			margin-bottom: 10px;
			font-family: 'Gothan';
			font-weight: 500;
			color: white;
			letter-spacing: 1px;
		}
		#Enlaces {
			display: flex;
			flex-direction: row;
			justify-content: center;
			align-items: center;

		}
		#Enlaces a {
  margin-right: 40px; /* Espacio fijo entre enlaces */
}
		a {
			text-decoration: none;
			ont-family: 'Gothan';
			font-weight: 500;
			color: white;
			font-size: 18px;
			letter-spacing: 1px;
		}
</style>

<style>
		.container {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			padding-left: 20%;
			padding-right: 15%;
			gap: 5%;
		}
		#logo_municipio{
			grid-column: 1 / 2;
			padding-top: 30px;
		}
		.container p{
			font-size:medium;
			font-family: 'Gotham-Light';
			color: #5e5e5e;

		}
</style>

<style>
	.InformationContainer{
		display: grid;
		grid-template-rows: 500px 1fr;
	}
	.InformationCards{
		display: grid;
		grid-template-columns: repeat(3, auto);
		align-items: center;
		justify-content: center;
		grid-area: 1 / 1 / 2 / -1;
		height: 500px;
		gap: 150px;
		overflow: hidden;
		background-image: url(/public/Imagenes_prueba/ankush-minda-4Xy08NbMBLM-unsplash.jpg);
	}
	.InformationButtons{
		display: grid;
		grid-template-columns: repeat(3, auto);
		gap: 150px;
		align-items: center;
		justify-content: center;
	}
	.button{
		align-items: center;
		width: 300px;
		display: flex;
		flex-direction: column;
		gap: 35px;
		padding-bottom: 30px;

	}
	.CardAge{
		display: grid;

	}
</style>

<style>
	.CTA{
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 20px 30% 10px 30%;
		justify-content: space-between;
		background: linear-gradient(135deg, #00788c 10%,#1f9db4 40%,#439eae 60%, #67b5c3 100% )
	}
</style>

<style>
	.Certification{
		background:
			radial-gradient(circle at top left, #e8f1fa 20%, transparent 50%),
			radial-gradient(circle at top right, #e8f1fa 20%, transparent 50%),
			radial-gradient(circle at bottom left, #e8f1fa 20%, transparent 50%),
			radial-gradient(circle at bottom right, #e8f1fa 20%, transparent 50%),
			radial-gradient(circle at center, #c9d8e6 20%, #dce6f0 50%);
		background-blend-mode: lighten;
		padding: 30px 0 30px 0;
		text-align: center;
	}
	.Certification h3 {
		font-size: 35px;
		font-family: 'Gothan';
		font-weight: 600;
		margin: 10px 0 5px 0;
	}
	.Certification div{
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 2rem;
	}
	.Certification p{
		max-width: 600px;
		font-size: 19px;
		font-family: 'Gothan';
		text-align: center;
		line-height: 1.6;
		hyphens:none;
	}
</style>

<style>
	.Contact{
		display: flex;
		align-items: center;
		justify-content: space-evenly;
		padding-bottom: 50px;
		padding-top: 80px;

	}
	.contact_text{
		max-width: 400px;
		border: 3px solid #00788c;
		border-radius: 5%;
		padding: 1% 2%;
	}
	.contact_text h3{
		font-family: 'Gothan';
		font-size: 30px;
		font-weight: 600;
	}
	.contact_text p{
		font-family: 'Gotham-Light';
		font-size: 20px;
		font-weight: 400;
		text-align: justify;
		line-height: 1.6;
	}
	.contact_text > ul{
		list-style-type: none;
	}
	.contact_text > ul > li{
		padding-bottom: 10px;
	}
	.Contact form{
		width: 400px;
		border: 3px solid #00788c;
		border-radius: 5%;
		padding: 1% 3%;
		display: flex;
		flex-direction: column;
		padding-bottom: 20px;
	}
	form > label{
		font-family: 'Gothan';
		font-size: 20px;
		font-weight: 600;
		margin: 15px 20px 15px 0;
	}

	form > input{
		border-radius: 8px;
		border: none;
		padding: 10px 15px;
	}
	form > textarea{
		border-radius: 8px;
		border: none;
		resize: none;
	}
	form > input:focus, textarea:focus{
		border-color: #007BFF;      /* Azul vivo al enfocar */
		box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
		outline: none;  
	}
	form > button{
		margin-top: 10px;
		padding: 10px 0;
		border: none;
		border-radius: 8px;
		background-color: #00788c;
		cursor: pointer;
		font-family: 'Gothan';
		font-size: 20px;
		font-weight: 600;
		color: white;
		position: relative;
		transition: all 0.3s cubic-bezier(0.23, 1, 0.320, 1);
		overflow: hidden;
	}
	form > button::before{
		content: '';
		position: absolute;
		inset: 0;
		margin: auto;
		border-radius: inherit;
		scale: 0;
		z-index: -1;
		transition: all 0.6s cubic-bezier(0.23, 1, 0.320, 1);
	}
	form > button:hover::before {
		background-color: #026577;
	}
	form > button:hover {
		color: #212121;
		scale: 1.05;
		box-shadow: 0 0px 20px rgba(238, 208, 143, 0.4);
	}
	form > button:active{
		scale: 1;
	}
</style>