---
const { link } = Astro.props;
const { text } = Astro.props;
---

<div>
	<button onclick="window.location.href='https://www.google.es'">
		<span>{text}</span>
	</button>
</div>

<style>
	button {
		display: inline-block;
		border-radius: 4px;
		background-color: #ffc83e;
		border: none;
		color: #7f7f7f;
		text-align: center;
		font-size: 17px;
		padding: 16px;
		transition: all 0.5s;
		cursor: pointer;
		margin: 5px;
		border-radius: 25px;
		min-width: 200px;
	}

	button span {
		cursor: pointer;
		display: inline-block;
		position: relative;
		transition: 0.5s;
		text-decoration: none;
		color: #7f7f7f;
		font-family: Poppins, Helvetica, Arial, Lucida, sans-serif;		font-weight: 400;
		letter-spacing: 1px;
		font-size: 25px;
	}

	button span:after {
		content: "Â»";
		position: absolute;
		opacity: 0;
		top: 0;
		right: -15px;
		transition: 0.5s;
	}

	button:hover span {
		padding-right: 15px;
	}

	button:hover span:after {
		opacity: 1;
		right: 0;
	}
</style>
