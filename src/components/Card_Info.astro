---
	const { urlImg } = Astro.props
	const { h3Text } = Astro.props 
	const { h5Text } = Astro.props 
	const { pText } = Astro.props 
---

<div id="card">
	<img src={urlImg}>
	<h3>
		{h3Text}
	</h3>
	<h5>
		{h5Text}
	</h5>
	<p>
		{pText}
	</p>
</div>



<style>
	*{
		margin: 0;

	}
	#card{
		width: 300px;
		height: 360px;
		background-color: white;
		border-radius: 15px;
		overflow: hidden;
		justify-content: center;
	}
	img{
		display: block;
		padding: 0 15px 0 15px;
	}
	h3{
		background: linear-gradient(to right, #00788c, #00c9b5);
		border-bottom-left-radius: 35px;
		margin: 0;
		padding-top: 20px;
		padding-bottom: 20px;
		padding-left: 15px;
		font-size: 20px;
		font-family:'Gotham', Helvetica, sans-serif;
		font-weight: 100;
		letter-spacing: 1px;
		color: white;
	}
	
	h5{
		padding-top: 10px;
		padding-left: 15px;
		font-size: 20px;
		font-family: Helvetica, sans-serif;
		font-weight: 500;
		letter-spacing: 1px;
		color: #00788c;
	}
	p{
		padding-top: 10px;
		padding-left: 15px;
		font-size: 16px;
		font-family: 'Gotham-Light', Helvetica, sans-serif;
		font-weight: 400;

	}
</style>